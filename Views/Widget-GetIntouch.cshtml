@using Orchard.Core.Common.Fields;
@using Orchard.Core.Title.Models;
@using Orchard.MediaLibrary.Fields;
@using CommonUtility;
@using Orchard.ContentPicker.Fields;

@{
	var item = Model;
	var contentItems = (ContentItem)Model.ContentItem;
	var Parts = Model.ContentItem.Parts;
	var contentParts = ((List<Orchard.ContentManagement.ContentPart>)Parts).Where(p => p.GetType().FullName == "Orchard.ContentManagement.ContentPart").ToList();

	InputField Telephone = FieldRender.Get<InputField>(contentParts, FieldType.InputField, "Telephone");
	TextField Email = FieldRender.Get<TextField>(contentParts, FieldType.TextField, "Email");
	MediaLibraryPickerField mediaPath = FieldRender.Get<MediaLibraryPickerField>(contentParts, FieldType.MediaLibraryPickerField, "Image");
